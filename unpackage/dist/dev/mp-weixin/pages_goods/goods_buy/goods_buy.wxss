page {
  background-color: #fafafa;
}
.goods-info-box {
  margin-top: 4px;
  display: flex;
  padding: 0 10px;
  border-bottom: 1px solid #efefef;
  background-color: #fff;
}
.goods-info-box .goods-left {
  width: 30%;
  display: flex;
  align-items: center;
}
.goods-info-box .goods-left .goods-pic {
  width: 100%;
}
.goods-info-box .goods-right {
  display: flex;
  margin-left: 5px;
  flex-direction: column;
  width: 70%;
}
.goods-info-box .goods-right .goods-name {
  font-size: 16px;
  margin-bottom: 6px;
  color: #4765b4;
}
.goods-info-box .goods-right .goods-sketch {
  margin-bottom: 2px;
  font-size: 13px;
  color: #757575;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-info-box .goods-right .goods-price {
  font-size: 13px;
  display: flex;
}
.goods-info-box .goods-right .goods-price view:nth-child(1) {
  color: #c00000;
}
.goods-info-box .goods-right .goods-price view:nth-child(2) {
  margin-left: 30rpx;
  color: #999999;
  text-decoration: line-through;
}
.goods-info-box .goods-right .bottom-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
}
.goods-info-box .goods-right .bottom-box .uni-numbox__value {
  height: 20px;
}
.goods-info-box .goods-right .bottom-box .clear-box {
  border-radius: 5px;
  padding: 2px 5px;
  font-size: 12px;
  height: 20px;
  border: 1px solid #f5f5f5;
}
.allPrice {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 10px;
  border-bottom: 1px solid #efefef;
  color: #999999;
  background-color: #fff;
}
.discount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  height: 90rpx;
  padding: 0 10px;
  border-bottom: 1px solid #efefef;
  color: #999999;
}
.buy-button {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 0 10px;
  margin: 50px 0;
  height: 120rpx;
  border-bottom: 1px solid #efefef;
}
.buy-button .totle text:nth-child(1) {
  margin-right: 6px;
  font-size: 14px;
}
.buy-button .totle text:nth-child(2) {
  color: #c00000;
  font-weight: 800;
}
.buy-button .disnum {
  color: #999999;
  font-size: 12px;
  margin-top: 4px;
}
.buy-button .tijiao {
  height: 40px;
  line-height: 40px;
  text-align: center;
  width: 80px;
  border-radius: 6px;
  color: #fff;
  background-color: #4765b4;
}

