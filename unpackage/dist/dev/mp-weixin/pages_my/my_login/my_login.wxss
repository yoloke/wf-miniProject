.logo {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}
.logo image {
  width: 200rpx;
}
.logo .logo_title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  color: #3266cc;
}
.logo .logo_title .big_title {
  display: block;
  font-size: 60rpx;
  font-weight: 700;
  letter-spacing: 8rpx;
}
.logo .logo_title .small_title {
  display: block;
  font-size: 30rpx;
}
.login-form {
  padding: 60rpx;
}
.login-form .uni-easyinput__content-input {
  line-height: 1;
  font-size: 18px;
  height: 35px;
}
.login-form .iconfont {
  border-radius: 50%;
  padding: 6rpx;
  border: 1px solid #3266cc;
  color: #3266cc;
  font-size: 18px;
}
.login-form button {
  margin: 40rpx 40rpx !important;
  background-color: #cccccc;
  color: #fff;
  font-size: 16px;
}
.login-form .is-input-border {
  border: none;
  border-radius: 0;
  border-bottom: 1px solid #3266cc !important;
}

