.search-box {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
  background-color: #fff;
}
.search-box .search-title {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #efefef;
}
.search-box .search-title text {
  color: #4765b4;
  padding: 0 12rpx;
}
.sugg-list {
  padding: 0 5px;
}
.sugg-list .sugg-item {
  display: flex;
  flex-direction: column;
  padding: 13px 0;
  border-bottom: 1px solid #efefef;
}
.sugg-list .sugg-item .goods-name {
  color: #4765b4;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.sugg-list .sugg-item .goods-sketch {
  font-size: 26rpx;
  color: #b7b7b7;
}
.history-box {
  padding: 0 15rpx;
}
.history-box .history-title {
  display: flex;
  justify-content: space-between;
  height: 40px;
  align-items: center;
  font-size: 13px;
}
.history-box .history-list {
  display: flex;
  flex-wrap: wrap;
}
.history-box .history-list .uni-tag {
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.hot-box {
  padding: 0 15rpx;
}
.hot-box .hot-title {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  font-size: 26rpx;
}
.hot-box .hot-list {
  display: flex;
  flex-wrap: wrap;
}
.hot-box .hot-list .uni-tag {
  margin-top: 10rpx;
  margin-right: 10rpx;
}

