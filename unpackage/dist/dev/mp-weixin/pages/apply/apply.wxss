.scroll-view {
  width: 100%;
  white-space: nowrap;
  border-bottom: 2rpx solid #c8c8c8;
}
.scroll-view .scroll-item {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
}
.scroll-view .scroll-item.active {
  color: #3266cc;
  border-bottom: 3px solid #3266cc;
}
.list .list-item {
  position: relative;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #c8c8c8;
}
.list .list-item .icon1 {
  padding-right: 20rpx;
  color: #3266cc;
  font-size: 20px;
}
.list .list-item text {
  position: absolute;
  right: 60rpx;
  font-size: 26rpx;
  color: #b9b9b9;
}
.list .list-item .icon2 {
  position: absolute;
  font-size: 50rpx;
  right: 10rpx;
  color: #cccccc;
}

