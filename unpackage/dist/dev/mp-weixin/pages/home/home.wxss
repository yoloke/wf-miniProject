page {
  background-color: #fafafa;
}
.header {
  padding-top: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 370rpx;
  background: linear-gradient(to top right, #376bce, #83b6f5);
}
.header .logo {
  display: flex;
  align-items: center;
  height: 120rpx;
}
.header .logo image {
  width: 200rpx;
}
.header .logo .logo_title {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  color: #fff;
}
.header .logo .logo_title .big_title {
  display: block;
  font-size: 60rpx;
  font-weight: 700;
  letter-spacing: 8rpx;
}
.header .logo .logo_title .small_title {
  display: block;
  font-size: 30rpx;
}
.header .search {
  margin-top: 60rpx;
  width: 100%;
}
.header .hotContain {
  color: #fff;
  font-size: 28rpx;
  margin: auto;
}
.hot-goods-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx 20rpx 30rpx;
  padding-top: 10rpx;
  height: 80rpx;
  color: #333333;
  background-color: #ffffff;
}
.hot-goods-header .title-box {
  display: flex;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 8rpx solid #3266cc;
  font-weight: 600;
}
.hot-goods-header .title-box .title {
  font-size: 28rpx;
}
.hot-goods-header .more {
  display: flex;
  font-size: 24rpx;
}
.hot-goods-header .more text {
  display: block;
  margin: auto;
}
.hot-goods-header .more .uni-icons {
  margin-left: 8rpx;
}
.hot-goods-list {
  display: grid;
  padding: 20rpx 10rpx;
  justify-content: center;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 16rpx;
  background-color: #fff;
}
.hot-goods-list .item image {
  width: 100%;
}
.common-features {
  margin-top: 16rpx;
  padding: 32rpx 20rpx;
  background-color: #fff;
}
.common-features .common-features-title {
  padding: 20rpx 0;
}
.common-features .common-features-list {
  display: grid;
  justify-content: center;
  height: 300rpx;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(2, 1fr);
  grid-gap: 16rpx;
}
.common-features .common-features-list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #757575;
  background-color: #fff;
}
.common-features .common-features-list .item button {
  margin: unset;
  position: absolute;
  height: 100rpx;
  width: 100rpx;
  opacity: 0;
}
.common-features .common-features-list .item button:after {
  border: unset;
}
.common-features .common-features-list .item .iconfont {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}
.common-features .common-features-list .item .title {
  font-size: 30rpx;
}

